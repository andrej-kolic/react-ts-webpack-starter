{
  "compilerOptions": {
    // "outDir": "build",
    // "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types", "./@types-external"],

    "target": "es5",
    "module": "ES6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "lib": ["es6", "DOM"],
    // "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "strict": true,
    // "types": [
    //     "node"
    //     "jest"
    // ],
    "sourceMap": true,

    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true
  },
  "include": ["@types/*", "@types-external/*", "src/**/*"],
  "exclude": [
    // "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "src/**/*/assets"
  ]

  // "include": ["@types/*", "@types-external/*", "src/**/*", "test/**/*"],
  // "exclude": ["node_modules", "dist-module", "dist-app", "src/**/*/assets"]
}
